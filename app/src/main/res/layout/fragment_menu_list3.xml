<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="10">
    >
    <android.support.v7.widget.Toolbar
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:titleTextColor="#ffffff">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Корзина"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:gravity="center"
                />
            <LinearLayout
                android:id="@+id/basket_toolbar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true">
                <TextView
                    android:id="@+id/toolbar_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="1400"
                    android:textSize="17dp"
                    android:textColor="#ffffff"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="kzt"
                    android:layout_marginLeft="5dp"
                    android:textSize="17dp"
                    android:textColor="#ffffff"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/basket"/>
            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_menulis3"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="10dp"
                android:src="@drawable/img1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="15dp"
                android:background="#e9e9e9"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/title_menulis3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name to products ddfd wfwefew cwef "
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/des_menulis3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name to products"
                    android:textSize="17dp"
                    android:textColor="#000000"/>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:id="@+id/price_menulis3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1400"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#000000"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="kzt"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#000000"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/add_to_basket_menulis3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/colorBtn"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/basket"/>
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:textColor="#ffffff"
                        android:textSize="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Добавить корзину"
                        />

                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/plus_item_menulist3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/colorBtn"
                    android:gravity="center"
                    android:weightSum="3">
                    <LinearLayout
                        android:id="@+id/minus_menulist3"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@color/colorBtn"
                        android:padding="15dp"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/minus"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@color/colorBtn"
                        android:padding="7dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/count_menulist3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:gravity="center"
                            android:textSize="25dp"
                            android:textColor="#ffffff"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/plus_menulist3"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@color/colorBtn"
                        android:padding="15dp"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/plus"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
